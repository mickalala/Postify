// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Medias {
  id       Int    @id @default(autoincrement())
  title    String
  username String

  @@map("medias")
}

model Posts {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  createdat DateTime @default(now())
}

model Publications {
  id      Int      @id @default(autoincrement())
  mediaId Int
  postId  Int
  date    DateTime
}
